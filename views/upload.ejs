<body>
    <div class="container">
        <h1>Upload images</h1>
        <form action="/upload" method="POST" enctype="multipart/form-data" id="upload_form" style="align-items: center;">
            <!--hidden form to upload data-->
            <label for="folder">Select folder</label>
            <input type='file' class="btn btn-primary" multiple='multiple' accept='image/*' name='uppic' id='file' />
            <h2>Selected Files</h2>
            <ul>
            </ul>
            <input type="submit" class="btn btn-primary btn-lg" value="Upload"></input>
        </form>
    </div>
    <script>
        var data;
        $('upload_form').addEventListener('submit', async function(e) {
            // const files = e.target.uppic.files;
            const files = e.target['uppic'].files;
            if (files.length != 0) {
                for (const single_file of files) {
                    data.append('uppic', single_file)
                }
            }
        });

        const submit_data_fetch = await fetch('/upload', {
            method: 'POST',
            body: data
        });
    </script>
</body>

