    <style>
       .flex-container {
            display: flex;
            flex-wrap: nowrap;
            background-color: #fff;
            align-items: center;
        }

        .flex-container > div {
            background-color: #f1f1f1;
            width: 150px;
            margin: 2.5px;
            text-align: center;
            line-height: 50px;
            font-size: 30px;
        }
        .flex-container > div > .flex-item {
            width: 100%;
            height: auto;
        }
        .container {
            align-items: center;
        }
        footer {
            text-align: center;
            padding: 3px;
            background-color: #111;
            color: white;
            bottom: 0rem;
            position: relative;
            width: 100%;
            opacity: calc();
        }
        img.hover-shadow {
            transition: 0.3s;
        }
        
        .hover-shadow:hover {
            box-shadow: 0 4px 8px 0 rgba(243, 238, 238, 0.2), 0 6px 20px 0 rgba(231, 221, 221, 0.19);
        }
        .img-responsive{
            margin:0 auto;
        }
        .sidenav {
            height: 100%;
            width: 0;
            position: fixed;
            z-index: 1;
            top: 0;
            left: 0;
            background-color: #FFF;
            overflow-x: hidden;
            transition: 0.5s;
            padding-top: 60px;
        }

        .sidenav a {
            padding: 8px 8px 8px 32px;
            text-decoration: none;
            font-size: 25px;
            color: #818181;
            display: block;
            transition: 0.3s;
        }

        .sidenav a:hover {
            color: #f1f1f1;
        }

        .sidenav .closebtn {
            position: absolute;
            top: 0;
            right: 25px;
            font-size: 36px;
            margin-left: 50px;
        }

        @media screen and (max-width: 600px) {
            .sidenav {padding-top: 15px;}
            .sidenav a {font-size: 18px;}
            .sidenav .form-inline.my-2.my-lg-0 .form-control.mr-sm-2{
                width: 85%;
            }
            .sidenav .closebtn {
                position: absolute;
                top: 0;
                right: 10px;
                font-size: 36px;
                margin-left: 25px;
            }
        }

        .dropdown{
            position: absolute;
            display: inline-block;
        }
        .dropdown-right{
            position: absolute;
            display: inline-block;
        }

        .dropdown-menu a:hover {
            background-color: #ddd;
            color: coral;
        }
        .dropdown-menu-right a:hover {
            background-color: #ddd;
            color: coral;
        }

        .dropdown:hover .dropdown-menu {
            display: block;
        }
        .dropdown-right:hover .dropdown-menu-right {
            display: block;
        }

        .dropdown{
            font-weight: bold;
        }
        .dropdown :hover{
            color: coral;
        }
        .dropdown-right{
            font-weight: bold;
        }
        .dropdown-right :hover{
            color: coral;
        }
        .nav.navbar-nav {
            font-weight: bold;
            background: transparent;
            transition: 0.5s;
        }

        .dropdown .dropdown-menu a:hover{
            font-weight: bold;
            color: coral;
            text-decoration: underline;
        }

        .dropdown-right .dropdown-menu-right a:hover{
            font-weight: bold;
            color: coral;
            text-decoration: underline;
        }

        .navbar-nav a{
            font-weight: 350;
            color: black;
            font-size: 16px;
            background: transparent;
            transition: 0.5s;
        }
        .navbar-nav a:hover{
            color: coral;
            text-decoration: underline;
            background-color: transparent;
            background: transparent;
        }

        .dropdown a:hover{
            color: coral;
            text-decoration: underline;
        }
        .dropdown-right a:hover{
            color: coral;
            text-decoration: underline;
        }

        .navbar.navbar-dark.bg-dark a.icon{
            display: none;
        }

        .navbar.navbar-dark.bg-dark a.icon:hover{
            color: coral;
        }

        .navbar.navbar-dark.bg-dark > .container-fluid > .nav.navbar-nav > li > a, .dropdown:hover{
            background: transparent;
            background-color: transparent;
        }

        @media screen and (max-width: 600px) {
            /* left menu */
            .navbar.navbar-dark.bg-dark{
                height: 5px;
                transition: 0.5s;
            }
            .navbar.navbar-dark.bg-dark > .container-fluid > .nav.navbar-nav > li > a, .dropdown{
                display: none;
                transition: 0.5s;
            }
            .navbar.navbar-dark.bg-dark a.icon{
                float: left;
                display: block;
                top: 10px;
                left: 10px;
                position: absolute;
            }

            .navbar.navbar-dark.bg-dark > .nav.navbar-nav.navbar-right > .login-item{
                position: absolute;
                top: 0;
                float: right;
                right: 75px;
            }
            .navbar.navbar-dark.bg-dark > .nav.navbar-nav.navbar-right > .cart-item{
                position: absolute;
                top: 0;
                float: right;
                right: 30px;
            }
            .navbar.navbar-dark.bg-dark > .nav.navbar-nav.navbar-right > a, .search-item{
                position: absolute;
                top: 0;
                float: right;
                right: 10px;
            }
        }

        @media screen and (max-width: 600px){   
            .navbar.navbar-dark.bg-dark.responsive {
                position: relative;
                height: 435px;
                transition: 0.5s;
            }
            .navbar.navbar-dark.bg-dark.responsive a.icon{
                position:absolute;
                left: 10px;
                top: 10px;
            }
            .navbar.navbar-dark.bg-dark.responsive > .container-fluid > .nav.navbar-nav > li > a, .dropdown{
                display: block;
                width: 100%;
                text-align: left;
                left: 0px;
            }
        }
    </style>
</head>

