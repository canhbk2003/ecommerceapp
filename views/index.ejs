<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>League store 77</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <style>
        .container {
            align-items: center;
        }
        
        .product-item {
            margin-top: 15px;
        }
        
        @media screen and (max-height: 450px) {}
        
        .new_product {
            text-align: center;
        }
        
        .populate_product {
            text-align: center;
        }
        
        footer {
            text-align: center;
            padding: 3px;
            background-color: DarkSalmon;
            color: white;
            bottom: 0rem;
            position: relative;
            width: 100%;
        }
        
        .card-img-top {
            width: 100%;
            height: 15vw;
            object-fit: cover;
            margin-top: 15px;
        }
        
        .carousel-inner>.item>img,
        .carousel-inner>.item>a>img {
            width: 70%;
            margin: auto;
        }
        
        .line-through {
            text-decoration: line-through;
        }
        
        .none {
            color: coral;
        }
    </style>
</head>

<body>
    <div class="container">
        <%- include ('header'); -%>
    </div>

    <%- include ('slideshow'); -%>

        <h2 class="new_product">SẢN PHẨM MỚI</h2>

        <div class="container">
            <div class="card-deck">
                <%for(var i=0; i<product.length;i++) { %>
                    <div class="col-sm-12 col-lg-4">
                        <div class="card h-100">
                            <img class="card-img-top" src="<%= product[i].image %>" alt="Card image cap">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <%= product[i].name %>
                                </h5>
                                <p class="card-text"> Price:
                                    <% if(product[i].bonusPrice > 0) { %>
                                        <p class="line-through">
                                            <%= product[i].price.toLocaleString('it-IT', {style : 'currency', currency : 'VND'}); %>
                                        </p>
                                        <p class="none">
                                            <%= product[i].bonusPrice.toLocaleString('it-IT', {style : 'currency', currency : 'VND'}); %>
                                        </p>

                                        <% } else { %>
                                            <p class="normal">
                                                <%= product[i].price.toLocaleString('it-IT', {style : 'currency', currency : 'VND'}); %>
                                            </p>
                                            <% } %>
                                </p>
                            </div>
                            <div class="card-footer">
                                <a href="/productdetail/<%= product[i]._id %>" class="btn btn-primary btn-sm">Detail</a>
                                <a href="#" class="btn btn-success btn-sm">
                                    <img src="/assets/carts.png" />
                                </a>
                            </div>
                        </div>
                    </div>
                    <% } %>
            </div>

        </div>

        <div class="container">
            <!-- get all number item from database then page panigate -->
            <nav aria-label="Page navigation example">
                <ul class="pagination">
                    <li class="page-item"><a class="page-link" href="#">Previous</a></li>
                    <%for(var i=1; i<=numItems;i++) { %>
                        <li class="page-item">
                            <a class="page-link" href="#">
                                <%= i %>
                            </a>
                        </li>
                        <% } %>
                            <li class="page-item"><a class="page-link" href="#">Next</a></li>
                </ul>
            </nav>
        </div>

        <h2 class="populate_product">SẢN PHẨM BÁN CHẠY</h2>

        <div class="container">
            <div class="card-deck">
                <%for(var i=0; i<product.length;i++) { %>
                    <div class="col-sm-12 col-lg-4">
                        <div class="card h-100">
                            <img class="card-img-top" src="<%= product[i].image %>" alt="Card image cap">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <%= product[i].name %>
                                </h5>
                                <p class="card-text"> Price:
                                    <% if(product[i].bonusPrice > 0) { %>
                                        <p class="line-through">
                                            <%= product[i].price.toLocaleString('it-IT', {style : 'currency', currency : 'VND'}); %>
                                        </p>
                                        <p class="none">
                                            <%= product[i].bonusPrice.toLocaleString('it-IT', {style : 'currency', currency : 'VND'}); %>
                                        </p>

                                        <% } else { %>
                                            <p class="normal">
                                                <%= product[i].price.toLocaleString('it-IT', {style : 'currency', currency : 'VND'}); %>
                                            </p>
                                            <% } %>
                                </p>
                            </div>
                            <div class="card-footer">
                                <a href="/productdetail/<%= product[i]._id %>" class="btn btn-primary btn-sm">Detail</a>
                                <a href="#" class="btn btn-success btn-sm">
                                    <img src="/assets/carts.png" />
                                </a>
                            </div>
                        </div>
                    </div>
                    <% } %>
            </div>

        </div>

        <div class="container">
            <!-- get all number item from database then page panigate -->
            <nav aria-label="Page navigation example">
                <ul class="pagination">
                    <li class="page-item"><a class="page-link" href="#">Previous</a></li>
                    <%for(var i=1; i<=numItems;i++) { %>
                        <li class="page-item">
                            <a class="page-link" href="#">
                                <%= i %>
                            </a>
                        </li>
                        <% } %>
                            <li class="page-item"><a class="page-link" href="#">Next</a></li>
                </ul>
            </nav>
        </div>



        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
        <script src="http://getbootstrap.com/dist/js/bootstrap.min.js"></script>

        <footer>
            <p> Copy right by League store 77 @ 2021 </p>
        </footer>
</body>

